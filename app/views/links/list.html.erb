<div class="row-fluid">
	<div class="span7 offset1 link_list">
		<h2>Link list</h2>

		<%= 'No links here...' if @empty %>
		

		<% @link_groups.each_with_index do |group, index| %>
			<h4><a href="javascript:void" data-toggle="collapse" data-target="#linkgroup<%= index %>"><i class="fa fa-caret-right"></i></a> <%= group[0] %></h4>

			<ul id='linkgroup<%= index %>' class="collapse in">
				<%= render partial: 'link', collection: group[1] %>
			</ul>
		<% end %>

	</div>

	<div class="link_create span3 hidden-phone" />
	  <ul class="nav nav-tabs" id="myTab">
	    <li class="active"><a href="#link" data-toggle="tab"><i class="fa fa-external-link"></i>  New link</a></li>
	    <li><a href="#task" data-toggle="tab"><i class="fa fa-bookmark"></i> New task</a></li>
	  </ul>
	  
	  <div class="tab-content">
	    <div class="tab-pane active" id="link">
		<%= form_for :link, :class => 'form-inline', :id => 'urlform', url: link_create_path do |f| %>
			<p>
				<%= f.text_field :url, :placeholder => 'URL', :style => 'margin-bottom: 0px', :type => 'url' %>
				<%= f.submit 'Add', :class => 'btn btn-primary' %>
			</p>
			<p>You can also use our bookmarklet. Drag this link to your bookmarks bar: <a href="<%= @bookmarklet %>">+ GBLink</a>
		<% end %></div>
	    <div class="tab-pane" id="task">
		<%= form_for :task, :class => 'form-inline', :id => 'taskform', url: link_nourl_create_path do |f|  %>
			<p> 
				<%= f.text_field :title, :placeholder => 'Task title', :style => 'margin-bottom: 0px', :minlength => '1' %>
				<%= f.submit 'Add', :class => 'btn btn-primary' %>
			</p>
		<% end %>
	    </div>
	  </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#tabs').tab();
    });
</script>    
